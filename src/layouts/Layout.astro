  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
</head>
<body>
  <Navigation />

  <main>
    <slot />
  </main>

  <footer class="footer">
    <div class="footer-container">
      <div class="footer-content">
        <div class="footer-contact">
          <p><a href="tel:+15167673637">üìû  (516) 767-3637</a></p>
          <p><a href="mailto:info@finessedetailing.com">üìß  info@finessedetailing.com</a></p>
          <p><a href="https://www.google.com/maps/dir/?api=1&destination=439B+Main+Street,+Port+Washington,+NY+11050" target="_blank">üìç  439B Main Street, Port Washington, NY 11050</a></p>
          <div class="social-links">
            <a href="https://www.facebook.com/finesse.detailing" aria-label="Facebook" target="_blank">
