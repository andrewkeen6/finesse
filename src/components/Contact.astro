      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: var(--white);
  }

  .contact-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .info-card,
  .form-card {
    background: var(--light-gray);
    padding: 2.5rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .info-card h3,
  .form-card h3 {
    color: var(--black);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .contact-details {
    margin-bottom: 2rem;
  }

  .detail-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .detail-icon {
    font-size: 1.5rem;
    margin-top: 0.2rem;
  }

  .detail-content h4 {
    color: var(--black);
    font-weight: 600;
    margin-bottom: 0.25rem;
    font-size: 1rem;
  }

  .detail-content p,
  .detail-content a {
    color: var(--accent-gray);
    text-decoration: none;
    line-height: 1.4;
  }

  .detail-content a:hover {
    color: var(--primary-red);
  }

  .hours-list p {
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
  }

  .service-area {
    background: var(--white);
    padding: 1.5rem;
    border-radius: 10px;
    border-left: 4px solid var(--primary-red);
  }

  .service-area h4 {
    color: var(--black);
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .service-area p {
    color: var(--accent-gray);
    font-size: 0.9rem;
  }

  .quick-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  .btn.large {
    padding: 1.2rem 2rem;
    font-size: 1.1rem;
    text-align: center;
  }

  /* Form Styles */
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    color: var(--black);
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 1rem;
    border: 2px solid #E5E5E5;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
    background: var(--white);
    color: var(--black);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-red);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-options {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    cursor: pointer;
    font-size: 0.9rem;
    color: var(--accent-gray);
  }

  .checkbox-label input[type="checkbox"] {
    width: 18px;
    height: 18px;
    accent-color: var(--primary-red);
  }

  /* Map Styles */
  .map-section {
    background: var(--light-gray);
    padding: 3rem 2rem;
    border-radius: 15px;
  }

  .map-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .map-header h3 {
    color: var(--black);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .map-header p {
    color: var(--accent-gray);
  }

  .map-container {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .map-placeholder {
    position: relative;
    height: 400px;
    background: var(--dark-gray);
  }

  .map-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(26, 26, 26, 0.7);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--white);
    z-index: 2;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .map-placeholder:hover .map-overlay {
    opacity: 0;
  }

  .location-marker {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--primary-red);
  }

  .location-info {
    text-align: center;
  }

  .location-info h4 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .location-info p {
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .map-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .map-btn {
    background: var(--primary-red);
    color: var(--white);
    border: none;
    padding: 0.7rem 1.2rem;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    transition: background 0.3s ease;
  }

  .map-btn:hover {
    background: var(--dark-red);
  }

  .map-placeholder iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .info-card,
    .form-card {
      padding: 2rem;
    }

    .map-section {
      padding: 2rem 1rem;
    }

    .map-actions {
      flex-direction: column;
      align-items: center;
    }

    .map-btn {
      width: 200px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form');

    form?.addEventListener('submit', (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      // Simulate form submission
      const submitBtn = form.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;

      submitBtn.textContent = 'Sending...';
      submitBtn.disabled = true;

      setTimeout(() => {
        alert('Thank you! Your message has been sent. We\'ll get back to you within 24 hours.');
        form.reset();
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
      }, 1500);
    });
  });

  function openDirections() {
    const address = encodeURIComponent('439B Main Street, Port Washington, NY 11050');
    window.open(`https://www.google.com/maps/dir/?api=1&destination=${address}`, '_blank');
  }

  function viewLargerMap() {
    const address = encodeURIComponent('439B Main Street, Port Washington, NY 11050');
    window.open(`https://www.google.com/maps/search/${address}`, '_blank');
  }
</script>