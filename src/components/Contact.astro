<section class="contact section">
  <div class="container">

    <div class="contact-content">
      <div class="contact-info">
        <div class="info-card">
          <h3>Contact Information</h3>
          <div class="contact-details">
            <div class="detail-item">
              <div class="detail-icon">üìû</div>
              <div class="detail-content">
                <h4>Phone</h4>
                <p><a href="tel:+15163149524">(516) 314-9524</a></p>
              </div>
            </div>

            <div class="detail-item">
              <div class="detail-icon">üìß</div>
              <div class="detail-content">
                <h4>Email</h4>
                <p><a href="mailto:info@finessedetailing.com">info@finessedetailing.com</a></p>
              </div>
            </div>

            <div class="detail-item">
              <div class="detail-icon">üìç</div>
              <div class="detail-content">
                <h4>Address</h4>
                <p><a href="https://www.google.com/maps/dir/?api=1&destination=439B+Main+Street,+Port+Washington,+NY+11050" target="_blank">439B Main Street<br>Port Washington, NY 11050</a></p>
              </div>
            </div>

            <div class="detail-item">
              <div class="detail-icon">üïí</div>
              <div class="detail-content">
                <h4>Hours</h4>
                <div class="hours-list">
                  <p><strong>Monday - Friday:</strong> 8:00 AM - 6:00 PM</p>
                  <p><strong>Saturday:</strong> 9:00 AM - 5:00 PM</p>
                  <p><strong>Sunday:</strong> By Appointment</p>
                </div>
              </div>
            </div>
          </div>

        </div>

        <div class="quick-actions">
          <a href="tel:+15163149524" class="btn btn-primary large">Call or Text</a>
        </div>
      </div>

      <div class="contact-form-section">
        <div class="form-card">
          <h3>Send Us a Message</h3>
          <form class="contact-form" id="contact-form">
            <div class="form-row">
              <div class="form-group">
                <label for="name">Full Name *</label>
                <input type="text" id="name" name="name" required>
              </div>
              <div class="form-group">
                <label for="phone">Phone Number *</label>
                <input type="tel" id="phone" name="phone" required>
              </div>
            </div>

            <div class="form-group">
              <label for="service">Service Interested In</label>
              <select id="service" name="service">
                <option value="">Select a service...</option>
                <option value="complete">Complete Detail</option>
                <option value="exterior">Exterior Detail</option>
                <option value="interior">Interior Detail</option>
                <option value="ceramic">Ceramic Coating</option>
                <option value="other">Other / Consultation</option>
              </select>
            </div>

            <div class="form-group">
              <label for="vehicle">Vehicle Information</label>
              <input type="text" id="vehicle" name="vehicle" placeholder="Year, Make, Model (e.g., 2022 BMW X5)">
            </div>

            <div class="form-group">
              <label for="message">Message</label>
              <textarea id="message" name="message" rows="5" placeholder="Tell us about your vehicle's condition, specific concerns, or any questions you have..."></textarea>
            </div>

            <button type="submit" class="btn btn-primary large">Send Message</button>
          </form>
        </div>
      </div>
    </div>

    <div class="map-section">
      <div class="map-header">
        <h3>Drop Off & Explore</h3>
        <p>Drop off your vehicle and enjoy Main Street's restaurants and shops while we work our magic</p>
      </div>

      <div class="map-container">
        <div class="map-placeholder" id="google-map">
          <!-- Google Maps embed will be loaded here -->
          <iframe
            src="https://maps.google.com/maps?q=439B%20Main%20Street,%20Port%20Washington,%20NY%2011050&output=embed"
            width="100%"
            height="400"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: var(--white);
  }


  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .info-card,
  .form-card {
    background: var(--light-gray);
    padding: 2.5rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .info-card h3,
  .form-card h3 {
    color: var(--black);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .contact-details {
    margin-bottom: 2rem;
  }

  .detail-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .detail-icon {
    font-size: 1.5rem;
    margin-top: 0.2rem;
  }

  .detail-content h4 {
    color: var(--black);
    font-weight: 600;
    margin-bottom: 0.25rem;
    font-size: 1rem;
  }

  .detail-content p,
  .detail-content a {
    color: var(--accent-gray);
    text-decoration: none;
    line-height: 1.4;
  }

  .detail-content a:hover {
    color: var(--primary-red);
  }

  .hours-list p {
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
  }

  .quick-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  .btn.large {
    padding: 1.2rem 2rem;
    font-size: 1.1rem;
    text-align: center;
  }

  /* Form Styles */
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    color: var(--black);
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 1rem;
    border: 2px solid #E5E5E5;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
    background: var(--white);
    color: var(--black);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-red);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  /* Map Styles */
  .map-section {
    background: var(--light-gray);
    padding: 3rem 2rem;
    border-radius: 15px;
  }

  .map-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .map-header h3 {
    color: var(--black);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .map-header p {
    color: var(--accent-gray);
  }

  .map-container {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .map-placeholder {
    position: relative;
    height: 400px;
    background: var(--dark-gray);
  }


  .map-placeholder iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .info-card,
    .form-card {
      padding: 2rem;
    }

    .map-section {
      padding: 2rem 1rem;
    }

    .map-actions {
      flex-direction: column;
      align-items: center;
    }

    .map-btn {
      width: 200px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Initialize EmailJS
    if (typeof emailjs !== 'undefined') {
      emailjs.init('YOUR_PUBLIC_KEY'); // Replace with your actual EmailJS public key
    }

    const form = document.getElementById('contact-form');

    form?.addEventListener('submit', (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      const submitBtn = form.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;

      submitBtn.textContent = 'Sending...';
      submitBtn.disabled = true;

      // Check if EmailJS is available
      if (typeof emailjs === 'undefined') {
        // Fallback to simple alert if EmailJS is not loaded
        setTimeout(() => {
          alert('Thank you! Your message has been received. We\'ll get back to you within 24 hours.');
          form.reset();
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
        }, 1500);
        return;
      }

      // Format the contact data for email
      const emailData = {
        to_email: 'andrew.keen6@gmail.com',
        customer_name: data.name,
        customer_phone: data.phone,
        service_interest: data.service || 'General Inquiry',
        vehicle_info: data.vehicle || 'Not specified',
        message: data.message || 'No additional message',
        contact_date: new Date().toLocaleDateString(),
        contact_time: new Date().toLocaleTimeString()
      };

      // Send email using EmailJS
      emailjs.send('YOUR_SERVICE_ID', 'YOUR_CONTACT_TEMPLATE_ID', emailData)
        .then(() => {
          alert('Thank you! Your message has been sent successfully. We\'ll get back to you within 24 hours.');
          form.reset();
        })
        .catch((error) => {
          console.error('EmailJS Error:', error);
          alert('There was an error sending your message. Please try again or call us directly at (516) 314-9524.');
        })
        .finally(() => {
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
        });
    });
  });

  function openDirections() {
    const address = encodeURIComponent('439B Main Street, Port Washington, NY 11050');
    window.open(`https://www.google.com/maps/dir/?api=1&destination=${address}`, '_blank');
  }

  function viewLargerMap() {
    const address = encodeURIComponent('439B Main Street, Port Washington, NY 11050');
    window.open(`https://www.google.com/maps/search/${address}`, '_blank');
  }
</script>