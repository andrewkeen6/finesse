<style>
  .testimonials {
    background: transparent;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .google-rating {
    margin-top: 2rem;
  }

  .rating-summary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .stars {
    font-size: 1.5rem;
  }

  .rating-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .rating-score {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-red);
  }

  .rating-text {
    color: #CCCCCC;
    font-size: 0.9rem;
  }

  .review-count {
    color: #CCCCCC;
    font-size: 0.8rem;
  }

  .google-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--card-dark);
    color: var(--white);
    padding: 0.7rem 1.5rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 500;
    border: 2px solid #4285F4;
    transition: all 0.3s ease;
  }

  .google-btn:hover {
    background: #4285F4;
    color: var(--white);
    transform: translateY(-2px);
  }

  .google-icon {
    font-size: 1.1rem;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .testimonial-simple {
    background: var(--card-dark);
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease;
  }

  .testimonial-simple:hover {
    transform: translateY(-5px);
  }

  .quote-icon {
    color: var(--primary-red);
    font-size: 3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    line-height: 1;
  }

  .quote-text {
    color: #CCCCCC;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-style: italic;
    font-size: 1rem;
  }

  .customer-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .customer-name {
    color: var(--white);
    font-weight: 600;
    font-size: 1rem;
  }

  .stars {
    font-size: 1rem;
    color: #FFD700;
  }

  .testimonials-footer {
    display: flex;
    justify-content: center;
  }

  .review-cta {
    text-align: center;
    background: var(--card-dark);
    padding: 2rem;
    border-radius: 15px;
    max-width: 600px;
  }

  .review-cta h3 {
    color: var(--white);
    margin-bottom: 0.5rem;
  }

  .review-cta p {
    color: #CCCCCC;
    margin-bottom: 1.5rem;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .rating-summary {
      flex-direction: column;
      text-align: center;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .testimonial-simple {
      padding: 1.5rem;
    }

    .quote-icon {
      font-size: 2.5rem;
    }
  }
</style>

