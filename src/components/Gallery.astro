---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import galleryManifest from '../data/gallery-manifest.json';

// Import optimized thumbnails eagerly for build-time optimization
const thumbnailImages = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/gallery/images/**/*.{jpg,jpeg,png,webp,JPG,JPEG,PNG}',
  { eager: true }
);

const videoThumbnails = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/gallery/video-thumbs/**/*.{jpg,jpeg,JPG,JPEG}',
  { eager: true }
);

// Process media items
const media = galleryManifest.media.map((item: any) => {
  const thumbnailKey = item.type === 'image'
    ? item.thumbnail
    : item.thumbnail;

  const thumbnailMap = item.type === 'image' ? thumbnailImages : videoThumbnails;
  const thumbnail = thumbnailMap[thumbnailKey]?.default;

  return {
    id: item.id,
    type: item.type,
    thumbnail,
    fullPath: item.full,
    category: item.category,
    date: item.date
  };
}).filter((item: any) => item.thumbnail); // Filter out items without thumbnails
---

<section class="gallery section">
  <div class="container">
    {media.length > 0 ? (
      <div class="masonry-grid">
        {media.map((item, index) => (
          <div class="masonry-item" data-full-src={item.fullPath} data-is-video={item.type === 'video'}>
            {item.type === 'video' ? (
              <>
                <Image
                  src={item.thumbnail}
                  alt={item.category}
                  width={400}
                  height={300}
                  quality={70}
                  format="webp"
                  loading={index < 12 ? "eager" : "lazy"}
                  class="gallery-media"
                />
                <div class="video-indicator">â–¶</div>
              </>
            ) : (
              <Image
                src={item.thumbnail}
                alt={item.category}
                width={400}
                height={300}
                quality={70}
                format="webp"
                loading={index < 12 ? "eager" : "lazy"}
                class="gallery-media"
              />
            )}
          </div>
        ))}
      </div>
    ) : (
      <div class="no-images">
        <p>No gallery media found. Add images and videos to <code>/public/gallery/</code></p>
      </div>
    )}

    <div class="instagram-section">
      <a href="https://instagram.com/finessedetail" target="_blank" rel="noopener noreferrer" class="instagram-card">
        <img src="/instagram_icon.png" alt="Instagram" class="instagram-icon" />
        <div class="instagram-content">
          <h3>Follow Us on Instagram</h3>
          <p>@finessedetail</p>
          <span class="instagram-cta">See our latest work</span>
        </div>
      </a>
    </div>
  </div>

  <!-- Lightbox for fullscreen viewing -->
  <div id="lightbox" class="lightbox">
    <button class="lightbox-close" aria-label="Close">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
    </button>
    <img src="" alt="Fullscreen image" class="lightbox-image" />
    <video class="lightbox-video" muted loop playsinline controls>
      <source src="" type="video/mp4" />
    </video>
    <button class="lightbox-prev" aria-label="Previous">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
    </button>
    <button class="lightbox-next" aria-label="Next">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
    </button>
  </div>
</section>

<style>
  .gallery {
    background: transparent;
    padding: 2rem 0 4rem;
  }

  /* Grid Layout - Left to Right */
  .masonry-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .masonry-item {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    background: #E5E5E5;
    aspect-ratio: 4 / 3;
  }

  .masonry-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
  }

  .masonry-item:active {
    transform: translateY(-3px);
  }

  .gallery-media {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    /* Enable hardware acceleration for smoother rendering */
    transform: translateZ(0);
    will-change: transform;
  }

  .video-indicator {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 3rem;
    color: rgba(255, 255, 255, 0.9);
    pointer-events: none;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    z-index: 2;
  }

  .no-images {
    text-align: center;
    padding: 4rem 2rem;
    color: #CCCCCC;
  }

  .no-images code {
    background: var(--card-dark);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: monospace;
    color: var(--white);
  }

  /* Lightbox Styles */
  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    justify-content: center;
    align-items: center;
  }

  .lightbox.active {
    display: flex;
  }

  .lightbox-image,
  .lightbox-video {
    max-width: 90%;
    max-height: 90vh;
    object-fit: contain;
    border-radius: 8px;
    display: none;
  }

  .lightbox-image.active,
  .lightbox-video.active {
    display: block;
  }

  .lightbox-close,
  .lightbox-prev,
  .lightbox-next {
    position: absolute;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: var(--white);
    cursor: pointer;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
    border-radius: 50%;
  }

  .lightbox-close svg,
  .lightbox-prev svg,
  .lightbox-next svg {
    width: 24px;
    height: 24px;
  }

  .lightbox-close:hover,
  .lightbox-prev:hover,
  .lightbox-next:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .lightbox-close {
    top: 1.5rem;
    right: 1.5rem;
  }

  .lightbox-close svg {
    width: 28px;
    height: 28px;
  }

  .lightbox-prev {
    left: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
  }

  .lightbox-next {
    right: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
  }

  .instagram-section {
    display: flex;
    justify-content: center;
    padding: 2rem 0;
  }

  .instagram-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background: var(--card-dark);
    padding: 1.5rem 2rem;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid rgba(140, 43, 43, 0.3);
  }

  .instagram-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
  }

  .instagram-icon {
    width: 50px;
    height: 50px;
    object-fit: contain;
  }

  .instagram-content h3 {
    color: var(--white);
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .instagram-content p {
    color: #CCCCCC;
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .instagram-cta {
    color: var(--primary-red);
    font-size: 0.9rem;
    font-weight: 500;
  }

  @media (max-width: 1024px) {
    .masonry-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .masonry-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
    }
  }

  @media (max-width: 768px) {
    .lightbox-close,
    .lightbox-prev,
    .lightbox-next {
      width: 44px;
      height: 44px;
    }

    .lightbox-close svg,
    .lightbox-prev svg,
    .lightbox-next svg {
      width: 20px;
      height: 20px;
    }

    .lightbox-close {
      top: 1rem;
      right: 1rem;
    }

    .lightbox-close svg {
      width: 24px;
      height: 24px;
    }

    .lightbox-prev {
      left: 0.5rem;
    }

    .lightbox-next {
      right: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .masonry-grid {
      grid-template-columns: 1fr;
    }

    .lightbox-image,
    .lightbox-video {
      max-width: 95%;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const lightbox = document.getElementById('lightbox');
    const lightboxImage = lightbox?.querySelector('.lightbox-image') as HTMLImageElement;
    const lightboxVideo = lightbox?.querySelector('.lightbox-video') as HTMLVideoElement;
    const closeBtn = lightbox?.querySelector('.lightbox-close');
    const prevBtn = lightbox?.querySelector('.lightbox-prev');
    const nextBtn = lightbox?.querySelector('.lightbox-next');
    const masonryItems = document.querySelectorAll('.masonry-item');

    let currentIndex = 0;
    const mediaItems: Array<{src: string, isVideo: boolean}> = [];

    // Force video to stay muted
    if (lightboxVideo) {
      lightboxVideo.addEventListener('volumechange', () => {
        if (!lightboxVideo.muted) {
          lightboxVideo.muted = true;
        }
      });
    }

    // Collect all media sources
    masonryItems.forEach((item, index) => {
      const fullSrc = item.getAttribute('data-full-src');
      const isVideo = item.getAttribute('data-is-video') === 'true';

      if (fullSrc) {
        mediaItems.push({ src: fullSrc, isVideo });

        // Click handler to open lightbox
        item.addEventListener('click', () => {
          currentIndex = index;
          openLightbox(fullSrc, isVideo);
        });
      }
    });

    function openLightbox(src: string, isVideo: boolean) {
      if (lightbox) {
        if (isVideo && lightboxVideo) {
          lightboxImage?.classList.remove('active');
          lightboxVideo.classList.add('active');
          lightboxVideo.querySelector('source')?.setAttribute('src', src);
          lightboxVideo.load();
          lightboxVideo.muted = true;
          lightboxVideo.play();
        } else if (lightboxImage) {
          lightboxVideo?.classList.remove('active');
          lightboxVideo?.pause();
          lightboxImage.classList.add('active');
          lightboxImage.src = src;
        }
        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
      }
    }

    function closeLightbox() {
      if (lightbox) {
        lightbox.classList.remove('active');
        lightboxVideo?.pause();
        document.body.style.overflow = '';
      }
    }

    function showNext() {
      currentIndex = (currentIndex + 1) % mediaItems.length;
      const item = mediaItems[currentIndex];
      openLightbox(item.src, item.isVideo);
    }

    function showPrev() {
      currentIndex = (currentIndex - 1 + mediaItems.length) % mediaItems.length;
      const item = mediaItems[currentIndex];
      openLightbox(item.src, item.isVideo);
    }

    // Event listeners
    closeBtn?.addEventListener('click', closeLightbox);
    prevBtn?.addEventListener('click', showPrev);
    nextBtn?.addEventListener('click', showNext);

    // Close on background click
    lightbox?.addEventListener('click', (e) => {
      if (e.target === lightbox) {
        closeLightbox();
      }
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (!lightbox?.classList.contains('active')) return;

      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowRight') showNext();
      if (e.key === 'ArrowLeft') showPrev();
    });
  });
</script>
