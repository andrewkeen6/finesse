---
import Layout from '../layouts/Layout.astro';
import Contact from '../components/Contact.astro';
---

<Layout title="Contact Us - Finésse Detailing" description="Get in touch with Finésse Detailing in Port Washington, NY. Book your service, ask questions, or schedule a consultation. Mobile service available throughout our service area.">
  <div class="contact-hero">
    <div class="container">
      <div class="hero-content">
        <h1>Contact Finésse Detailing</h1>
        <p>Ready to transform your vehicle? Get in touch with us today for a consultation or to book your detailing service.</p>
      </div>
    </div>
  </div>

  <Contact />

</Layout>

<style>
  .contact-hero {
    background: var(--dark-gray);
    color: var(--white);
    padding: 4rem 0 2rem;
    text-align: center;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--primary-red);
  }

  .hero-content p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto;
  }


  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2rem;
    }

    .contact-hero {
      padding: 3rem 0 1.5rem;
    }
  }
</style>