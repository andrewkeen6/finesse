<Layout title="Book Service - FinÃ©sse Detailing" description="Book your premium motorcar or marine detailing service online. Choose from complete detail, exterior, interior, or ceramic coating packages. Mobile service available in Port Washington, NY.">
  <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js" slot="head"></script>
  <div class="booking-hero">
    <div class="container">
      <div class="hero-content">
        <h1>Book Your Detail Service</h1>
        <p>Select your service, choose your date, and let us restore your vehicle's or boat's beauty.</p>
      </div>
    </div>
  </div>

  <section class="booking-section section">
    <div class="container">
      <div class="booking-content">
        <div class="booking-form-section">
          <div class="form-card">
            <h2>Service Booking</h2>
            <form class="booking-form" id="booking-form">
              <div class="form-step" id="step-1">
                <h3>Choose Your Service</h3>
                <div class="service-options">
                  <label class="service-option">
                    <input type="radio" name="service" value="complete" required>
                    <div class="option-content">
                      <div class="option-header">
                        <h4>Complete Detail</h4>
                        <span class="price">$299+</span>
                      </div>
                      <p>Full interior and exterior detail with protection</p>
                      <span class="duration">4-6 hours</span>
                    </div>
                  </label>

                  <label class="service-option">
                    <input type="radio" name="service" value="exterior" required>
                    <div class="option-content">
                      <div class="option-header">
                        <h4>Exterior Detail</h4>
                        <span class="price">$179+</span>
                      </div>
                      <p>Professional exterior wash, polish, and protection</p>
                      <span class="duration">2-3 hours</span>
                    </div>
                  </label>

                  <label class="service-option">
                    <input type="radio" name="service" value="interior" required>
                    <div class="option-content">
                      <div class="option-header">
                        <h4>Interior Detail</h4>
                        <span class="price">$149+</span>
                      </div>
                      <p>Deep interior cleaning and conditioning</p>
                      <span class="duration">2-3 hours</span>
                    </div>
                  </label>

                  <label class="service-option">
                    <input type="radio" name="service" value="ceramic" required>
                    <div class="option-content">
                      <div class="option-header">
                        <h4>Ceramic Coating</h4>
                        <span class="price">$799+</span>
                      </div>
                      <p>Ultimate protection with ceramic coating</p>
                      <span class="duration">Full day</span>
                    </div>
                  </label>
                </div>
                <button type="button" class="btn btn-primary next-btn" onclick="nextStep()">Continue</button>
              </div>

              <div class="form-step hidden" id="step-2">
                <h3>Vehicle & Contact Information</h3>
                <div class="form-row">
                  <div class="form-group">
                    <label for="name">Full Name *</label>
                    <input type="text" id="name" name="name" required>
                  </div>
                  <div class="form-group">
                    <label for="phone">Phone Number *</label>
                    <input type="tel" id="phone" name="phone" required>
                  </div>
                </div>

                <div class="form-group">
                  <label for="email">Email Address *</label>
                  <input type="email" id="email" name="email" required>
                </div>

                <div class="form-row">
                  <div class="form-group">
                    <label for="year">Year *</label>
                    <input type="number" id="year" name="year" min="1990" max="2025" required>
                  </div>
                  <div class="form-group">
                    <label for="make">Make *</label>
                    <input type="text" id="make" name="make" required>
                  </div>
                </div>

                <div class="form-row">
                  <div class="form-group">
                    <label for="model">Model *</label>
                    <input type="text" id="model" name="model" required>
                  </div>
                  <div class="form-group">
                    <label for="color">Color</label>
                    <input type="text" id="color" name="color">
                  </div>
                </div>

                <div class="form-actions">
                  <button type="button" class="btn btn-outline back-btn" onclick="prevStep()">Back</button>
                  <button type="button" class="btn btn-primary next-btn" onclick="nextStep()">Continue</button>
                </div>
              </div>

              <div class="form-step hidden" id="step-3">
                <h3>Schedule & Location</h3>
                <div class="form-row">
                  <div class="form-group">
                    <label for="date">Preferred Date *</label>
                    <input type="date" id="date" name="date" required>
                  </div>
                  <div class="form-group">
                    <label for="time">Preferred Time *</label>
                    <select id="time" name="time" required>
                      <option value="">Select time...</option>
                      <option value="8:00 AM">8:00 AM</option>
                      <option value="9:00 AM">9:00 AM</option>
                      <option value="10:00 AM">10:00 AM</option>
                      <option value="11:00 AM">11:00 AM</option>
                      <option value="12:00 PM">12:00 PM</option>
                      <option value="1:00 PM">1:00 PM</option>
                      <option value="2:00 PM">2:00 PM</option>
                      <option value="3:00 PM">3:00 PM</option>
                    </select>
                  </div>
                </div>

                <div class="location-options">
                  <h4>Service Location</h4>
                  <label class="location-option">
                    <input type="radio" name="location" value="shop" required>
                    <div class="option-content">
                      <h5>At Our Shop</h5>
                      <p>123 Detail Street, Automotive District</p>
                      <span class="location-note">No additional fee</span>
                    </div>
                  </label>

                  <label class="location-option">
                    <input type="radio" name="location" value="mobile" required>
                    <div class="option-content">
                      <h5>Mobile Service</h5>
                      <p>We come to your location</p>
                      <span class="location-note">+$25 within 20 miles</span>
                    </div>
                  </label>
                </div>

                <div class="form-group mobile-address hidden">
                  <label for="address">Your Address *</label>
                  <textarea id="address" name="address" rows="3" placeholder="Enter your complete address for mobile service"></textarea>
                </div>

                <div class="form-group">
                  <label for="notes">Special Notes</label>
                  <textarea id="notes" name="notes" rows="3" placeholder="Any special requests, concerns, or additional information..."></textarea>
                </div>

                <div class="form-actions">
                  <button type="button" class="btn btn-outline back-btn" onclick="prevStep()">Back</button>
                  <button type="submit" class="btn btn-primary">Book Service</button>
                </div>
              </div>
            </form>
          </div>
        </div>

        <div class="booking-info">
          <div class="info-card">
            <h3>What to Expect</h3>
            <div class="expectation-list">
              <div class="expectation-item">
                <span class="expectation-icon">ðŸ“ž</span>
                <div>
                  <h4>Confirmation Call</h4>
                  <p>We'll call to confirm your appointment within 2 hours</p>
                </div>
              </div>
              <div class="expectation-item">
                <span class="expectation-icon">ðŸš—</span>
                <div>
                  <h4>Vehicle Preparation</h4>
                  <p>Remove personal items; we'll handle the rest</p>
                </div>
              </div>
              <div class="expectation-item">
                <span class="expectation-icon">âœ¨</span>
                <div>
                  <h4>Professional Service</h4>
                  <p>Expert detailing with premium products and equipment</p>
                </div>
              </div>
              <div class="expectation-item">
                <span class="expectation-icon">ðŸ“¸</span>
                <div>
                  <h4>Progress Updates</h4>
                  <p>Photos and updates throughout the detailing process</p>
                </div>
              </div>
            </div>
          </div>

          <div class="info-card">
            <h3>Pricing Information</h3>
            <div class="pricing-note">
              <p>Prices shown are starting rates. Final pricing depends on:</p>
              <ul>
                <li>Vehicle size and condition</li>
                <li>Additional services requested</li>
                <li>Location (mobile service fee)</li>
                <li>Seasonal demand</li>
              </ul>
              <p class="guarantee">ðŸ’¯ <strong>100% Satisfaction Guarantee</strong></p>
            </div>
          </div>

          <div class="contact-card">
            <h4>Need Help?</h4>
            <p>Questions about our services?</p>
            <a href="tel:+15163149524" class="contact-btn">
              ðŸ“ž Call or Text (516) 314-9524
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .booking-hero {
    background: linear-gradient(135deg, var(--black) 0%, var(--primary-red) 100%);
    color: var(--white);
    padding: 8rem 0 4rem;
    text-align: center;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--white) 0%, var(--light-gray) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-content p {
    font-size: 1.2rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .booking-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: flex-start;
  }

  .form-card,
  .info-card {
    background: var(--white);
    padding: 2.5rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .form-card h2 {
    color: var(--black);
    font-size: 1.8rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .form-step h3 {
    color: var(--black);
    margin-bottom: 1.5rem;
    font-size: 1.3rem;
  }

  .service-options {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .service-option {
    cursor: pointer;
    display: block;
  }

  .service-option input[type="radio"] {
    display: none;
  }

  .option-content {
    padding: 1.5rem;
    border: 2px solid #E5E5E5;
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .service-option input[type="radio"]:checked + .option-content {
    border-color: var(--primary-red);
    background: rgba(220, 20, 60, 0.05);
  }

  .option-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .option-header h4 {
    color: var(--black);
    font-weight: 600;
  }

  .price {
    color: var(--primary-red);
    font-weight: 700;
    font-size: 1.1rem;
  }

  .option-content p {
    color: var(--accent-gray);
    margin-bottom: 0.5rem;
  }

  .duration {
    color: var(--accent-gray);
    font-size: 0.9rem;
    font-style: italic;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    margin-bottom: 1rem;
  }

  .form-group label {
    color: var(--black);
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 1rem;
    border: 2px solid #E5E5E5;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-red);
  }

  .location-options {
    margin: 1.5rem 0;
  }

  .location-options h4 {
    color: var(--black);
    margin-bottom: 1rem;
  }

  .location-option {
    cursor: pointer;
    display: block;
    margin-bottom: 1rem;
  }

  .location-option input[type="radio"] {
    display: none;
  }

  .location-option .option-content {
    padding: 1rem;
  }

  .location-option h5 {
    color: var(--black);
    margin-bottom: 0.25rem;
  }

  .location-note {
    color: var(--primary-red);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    justify-content: space-between;
    margin-top: 2rem;
  }

  .hidden {
    display: none;
  }

  .next-btn,
  .back-btn {
    flex: 1;
  }

  .info-card {
    margin-bottom: 2rem;
  }

  .info-card h3 {
    color: var(--black);
    margin-bottom: 1.5rem;
  }

  .expectation-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .expectation-item {
    display: flex;
    gap: 1rem;
  }

  .expectation-icon {
    font-size: 1.5rem;
    margin-top: 0.2rem;
  }

  .expectation-item h4 {
    color: var(--black);
    margin-bottom: 0.25rem;
    font-size: 1rem;
  }

  .expectation-item p {
    color: var(--accent-gray);
    font-size: 0.9rem;
  }

  .pricing-note ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .pricing-note li {
    color: var(--accent-gray);
    margin-bottom: 0.25rem;
  }

  .guarantee {
    color: var(--success-green);
    text-align: center;
    margin-top: 1rem;
  }

  .contact-card {
    background: var(--primary-red);
    color: var(--white);
    padding: 2rem;
    border-radius: 15px;
    text-align: center;
  }

  .contact-card h4 {
    margin-bottom: 0.5rem;
  }

  .contact-card p {
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .contact-btn {
    background: var(--white);
    color: var(--primary-red);
    padding: 0.8rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .contact-btn:hover {
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2rem;
    }

    .booking-hero {
      padding: 6rem 0 3rem;
    }

    .booking-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .form-actions {
      flex-direction: column;
    }
  }
</style>

<script>
  let currentStep = 1;
  const totalSteps = 3;

  function showStep(step) {
    for (let i = 1; i <= totalSteps; i++) {
      const stepElement = document.getElementById(`step-${i}`);
      if (stepElement) {
        stepElement.classList.toggle('hidden', i !== step);
      }
    }
    currentStep = step;
  }

  function nextStep() {
    if (currentStep < totalSteps) {
      showStep(currentStep + 1);
    }
  }

  function prevStep() {
    if (currentStep > 1) {
      showStep(currentStep - 1);
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    // Initialize EmailJS
    emailjs.init('YOUR_PUBLIC_KEY'); // Replace with your actual EmailJS public key

    // Handle mobile service address field
    const locationRadios = document.querySelectorAll('input[name="location"]');
    const mobileAddressField = document.querySelector('.mobile-address');

    locationRadios.forEach(radio => {
      radio.addEventListener('change', () => {
        if (mobileAddressField) {
          mobileAddressField.classList.toggle('hidden', radio.value !== 'mobile');
          const addressInput = document.getElementById('address');
          if (addressInput) {
            addressInput.required = radio.value === 'mobile';
          }
        }
      });
    });

    // Set minimum date to today
    const dateInput = document.getElementById('date');
    if (dateInput) {
      const today = new Date().toISOString().split('T')[0];
      dateInput.setAttribute('min', today);
    }

    // Handle form submission
    const form = document.getElementById('booking-form');
    form?.addEventListener('submit', (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      const submitBtn = form.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;

      submitBtn.textContent = 'Sending...';
      submitBtn.disabled = true;

      // Format the booking data for email
      const emailData = {
        to_email: 'andrew.keen6@gmail.com',
        customer_name: data.name,
        customer_email: data.email,
        customer_phone: data.phone,
        service_type: getServiceName(data.service),
        vehicle_info: `${data.year} ${data.make} ${data.model} ${data.color || ''}`.trim(),
        preferred_date: data.date,
        preferred_time: data.time,
        service_location: data.location === 'mobile' ? `Mobile Service - ${data.address}` : 'At Shop - 439B Main Street, Port Washington, NY 11050',
        mobile_service: data.mobile_service ? 'Yes' : 'No',
        newsletter: data.newsletter ? 'Yes' : 'No',
        special_notes: data.notes || 'None',
        booking_date: new Date().toLocaleDateString(),
        booking_time: new Date().toLocaleTimeString()
      };

      // Send email using EmailJS
      emailjs.send('YOUR_SERVICE_ID', 'YOUR_TEMPLATE_ID', emailData)
        .then(() => {
          // Success
          alert('Booking request submitted successfully! We\'ll call you within 2 hours to confirm your appointment.');
          form.reset();
          showStep(1);
        })
        .catch((error) => {
          // Error
          console.error('EmailJS Error:', error);
          alert('There was an error submitting your booking. Please try again or call us directly at (516) 314-9524.');
        })
        .finally(() => {
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
        });
    });

    function getServiceName(serviceValue) {
      const serviceNames = {
        'complete': 'Complete Detail',
        'exterior': 'Exterior Detail',
        'interior': 'Interior Detail',
        'ceramic': 'Ceramic Coating'
      };
      return serviceNames[serviceValue] || serviceValue;
    }
  });
</script>